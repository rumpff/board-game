        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>//Get the player's input
key_right = (keyboard_check(vk_right) || gamepad_axis_value(1,gp_axislh) &gt; 0) || (gamepad_button_check(1, gp_padr));
key_left = -(keyboard_check(vk_left) || gamepad_axis_value(1,gp_axislh) &lt; 0 || (gamepad_button_check(1, gp_padl)));
key_jump = (keyboard_check_pressed(vk_space) || gamepad_button_check_pressed(1,gp_face1));
key_jump_held = (keyboard_check(vk_space) || gamepad_button_check(1,gp_face1));
key_down = (keyboard_check(vk_down) || gamepad_button_check(1,gp_face3) || gamepad_button_check(1,gp_face2));

if (DashGround == 0)
{
//React to inputs
move = key_left + key_right;
hsp = move * movespeed;
if  (dash == 0)
{
    if (vsp &lt; 30) vsp += grav;
}
//Jumps
if (place_meeting(x,y+1,obj_wall))
{
    jumps = jumpsmax;
}
else
{
    if (jumps == jumpsmax) jumps -=1;
}

if (key_jump) &amp;&amp; (jumps &gt; 0) &amp;&amp; (!key_down)
{
    if (jumps == 2)
    {
        audio_play_sound(sound_jump1,1,0)
    }
    if (jumps == 1)
    {
        instance_create(obj_player.x+0,obj_player.y+32,obj_doubleJumpFX)
        audio_play_sound(sound_jump2,1,0)
    }
    jumps -= 1;
    vsp = -jumpspeed;
}

if (vsp &lt; 0) &amp;&amp; (!key_jump_held) vsp = max(vsp,-jumpspeed/2)

if (key_down)
{
    if !audio_is_playing(snd_wind)
    {
        audio_play_sound(snd_wind,1,0);
    }
    vsp = VDashSpeed
    dash = 1;
    jumps = 0;
    DrawTrail = true;
}

var hsp_final = hsp + hsp_carry;
hsp_carry = 0;

//Horizontal Collision
if (place_meeting(x+hsp_final,y,obj_wall))
{
    while(!place_meeting(x+sign(hsp_final),y,obj_wall))
    {
        x += sign(hsp_final);
    }
    hsp_final = 0;
    hsp = 0;
}
x += hsp_final;

//Vertical Collision
if (place_meeting(x,y+vsp,obj_wall))

{
    
    while(!place_meeting(x,y+sign(vsp),obj_wall))
    {
        y += sign(vsp);
        if (dash = 1)
        {
            alarm[0] = 1
        }
    }
    audio_stop_sound(snd_wind);
    vsp = 0;
    dash = 0;
}
y += vsp;
// other player collisioon horizontal
if (place_meeting(x+hsp_final,y,obj_player2))
{
        hsp = -hsp    
}



// other player collision vertical
if (place_meeting(x,y+vsp,obj_player2))
{
    if vsp &gt; 0
    if (dash == 1)
    {
    with (obj_player2) script_execute(scr_player2ded);
    }
    else
    {
    vsp = -jumpspeed;
    }

}
// Collison with kill plain
if (place_meeting(x, y, obj_killPlain))
{
    scr_player2dedKP();
}


//Animate
if (move!=0) image_xscale = move;
if (place_meeting(x,y+1,obj_wall))
{
    if (move!=0) 
    {
        sprite_index = sprite_run; 
        image_speed = imageSpeed;
    }
    else if (sprite_index != sprite_dash) sprite_index = sprite_idle; image_speed = imageSpeed / 2;
}
else
{
    if (vsp &lt; 0) sprite_index = sprite_jump; else if (dash = 1) sprite_index = sprite_dash; else sprite_index = sprite_fall;
}
// Control the footstep sounds
if (sprite_index = sprite_run)
{
    ii = floor(image_index);
    if (ii != iiPrev)
    {
        if (ii == stepFrame1)
        {
            audio_play_sound(snd_footstep1, 1, 0);
        }
        else if (ii == stepFrame2)
        {
            audio_play_sound(snd_footstep2, 1, 0);
        }
    }
    iiPrev = ii;
}
}

if (vsp == VDashSpeed)
{
    if !audio_is_playing(snd_wind)
    {
    audio_play_sound(snd_wind,1,0);
    }
}

if place_meeting(x,y,obj_shockwave2)
{
scr_playerded();
}
